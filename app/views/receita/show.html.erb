<div class="page-header">
  <%= link_to receita_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_receitum_path(@receitum), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show receitum</h1>
</div>

<dl class="dl-horizontal">
  <dt>Nome:</dt>
  <dd><%= @receitum.nome %></dd>

  <dt>Descricao:</dt>
  <dd><%= @receitum.descricao %></dd>

  <dt>Valor:</dt>
  <dd><%= @receitum.valor %></dd>

</dl>
